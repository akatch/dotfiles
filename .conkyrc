#
# ~/.conkyrc
#

background yes
use_xft yes
xftfont Terminus:pixelsize=12
xftalpha 1
update_interval 1
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,above,sticky,skip_taskbar,skip_pager
double_buffer yes
draw_shades no
draw_outline yes
draw_borders no
draw_graph_borders no
default_color white 
default_shade_color black
default_outline_color black
alignment bottom_left
gap_x 5
gap_y 5
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
short_units yes
default_bar_size 30 7
use_spacer left
text_buffer_size 1024

# Colors
color0 555555  
color1 white
color2 9ccb19

TEXT
${color0}| ${color2}load : ${color1}${loadavg 1}  ${loadavg 2}  ${loadavg 3} ${color0}| ${color2}mem : ${color1}${memperc}% ${color0}| ${color2}up : ${color1}${upspeedf eth0}KB/s ${color0}| ${color2}down : ${color1}${downspeedf eth0}KB/s ${color0}| ${color2}/ : ${color1}${fs_used_perc /}% ${color0}| ${color2}/home : ${color1}${fs_used_perc /home}% ${color0}| ${color2}/vault : ${color1}${fs_used_perc /vault}% ${color0}| ${color2}sda_io : ${color1}${diskio sda} ${color0}| ${color2}sdb_io : ${color1}${diskio sdb} ${color0}| ${color2}${time %d %h %Y} ${color0}| ${color2}${time %H:%M:%S} ${color0}|
