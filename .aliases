## rbenv
rbenv_exists=`which rbenv` &> /dev/null
if [ -e $rbenv_exists ]; then
    eval "$(rbenv init -)"
    alias be='bundle exec'
    alias development='export RAILS_ENV=development'
    alias test='export RAILS_ENV=test'
    alias qa='export RAILS_ENV=qa'
fi

